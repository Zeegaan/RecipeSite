@inherits LayoutComponentBase
@inject NavigationManager NavigationManager
<PageTitle>BlazorProj</PageTitle>

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Favorite" Color="Color.Inherit" Edge="Edge.Start" OnClick="OnClick"/>
        Nikolajs Wacky Recipes
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code
{
    private void OnClick()
    {
        NavigationManager.NavigateTo("/");
    }
}
